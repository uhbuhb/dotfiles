inoremap jk <ESC>
let mapleader = "'"
syntax on 
set number 
set noswapfile 
set hlsearch 
set ignorecase 
set incsearch 
filetype plugin indent on
" show existing tab with 2 spaces width
set tabstop=2
" when indenting with '>', use 2 spaces width
set shiftwidth=2
" On pressing tab, insert 2 spaces
set expandtab

